{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "commonjs",
    "jsx": "preserve",
    "target": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "importHelpers": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "outDir": "dist",
    "typeRoots": ["./node_modules/@types"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@customHead": ["./src/components/CustomHead/CustomHead"],
      "@homepage/*": ["./src/components/pages/home/*"],
      "@projects/*": ["./src/components/pages/projects/*"],
      "@aboutUs/*": ["./src/components/pages/aboutUs/*"],
      "@cooperation/*": ["./src/components/pages/cooperation/*"],
      "@404Page/*": ["./src/components/pages/404Page/*"],
      "@layout/*": ["./src/components/layout/*"],
      "@layout": ["./src/components/layout/index.jsx"],
      "@generic/*": ["./src/components/Generic/*"],
      "@cta/*": ["./src/components/Generic/CallToAction/*"],
      "@topSection/*": ["./src/components/Generic/topSection/*"],
      "@icons/*": ["./src/components/Generic/icons/*"],
      "@formElements/*": ["./src/components/Generic/formElements/*"],
      "@contactForm/*": ["./src/components/Generic/contactForm/*"],
      "@valueTile": ["./src/components/Generic/ValueTiles/index.jsx"],
      "@partnerTiles/*": ["./src/components/Generic/partnersList/*"],
      "@buttons/*": ["./src/components/Generic/buttons/*"],
      "@dataMappers/*": ["./src/dataMappers/*"],
      "@redux/*": ["./src/redux/*"],
      "@projectSwitch/*": ["./src/components/Generic/ProjectsSwitch/*"],
      "@typography/*": ["./src/styles/typography/*"],
      "@projectTile/*": ["./src/components/Generic/projectTile/*"],
      "@logos/*": ["./src/components/Generic/logos/*"],
      "@root/*": ["./src/*"],
      "@api/*": ["./src/api/*"],
      "@api": ["./src/api/index.ts"],
      "@assets/*": ["./src/assets/*"],
      "@clients/*": ["./src/clients/*"],
      "@components/*": ["./src/components/*"],
      "@consts/*": ["./src/consts/*"],
      "@contextProviders/*": ["./src/contextProviders/*"],
      "@extension/*": ["./src/extension/*"],
      "@styles/*": ["./src/styles/*"],
      "@utils/*": ["./src/utils/*"],
      "@utils": ["./src/utils/index.ts"],
      "@tootlip": ["./src/components/Generic/tooltip/index.jsx"],
      "@typings/*": ["./src/typings/*"],
      "@hoc/*": ["./src/hoc/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@views/*": ["./src/views/*"]
    }
  },
  "exclude": ["node_modules", "dist"],
  "include": [
    "src",
    "tests",
    "next.config.js",
    "sentry.client.config.js",
    "sentry.server.config.js",
    "jest.config.js"
  ]
}
